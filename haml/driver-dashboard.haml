            %button.btn.cp-btn-white(type="button" ) Year
            %button.btn.cp-btn-white(type="button" ) Month
            %button.btn.cp-btn-white.active(type="button" ) Week

      .cp-dashboard
        .cp-chart-full
          %canvas#driver-new-driver(width="1200" height="500" )

  / Driver on Map
  .cp-flex-item.cp-flex-1of1
    .cp-flex-content.cp-card
      %header
