      .cp-dashboard
        .cp-chart-doughnut
          %canvas#driver-system-status(width="200" height="200" )
          .cp-dashboard-icn-center
            %i.cp-icn-active-driver
        .cp-typo-dashboard-subcount 700
        .cp-typo-code Active Driver

